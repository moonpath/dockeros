networks:
  webos:
    name: webos
    driver: bridge
    ipam:
      config:
        - subnet: 10.20.30.0/24

volumes:
  webos:
    name: webos
    # driver: local
    external: true

services:
  webos:
    image: moonpath/webos-gpu:latest
    container_name: webos
    hostname: linux
    shm_size: 16g
    privileged: true
    restart: unless-stopped
    stdin_open: true
    tty: true
    build:
      context: .
      dockerfile: dockerfile-webos-gpu
    environment:
      VNC_PORT: "7900"
      VNC_USER: admin
      VNC_PASSWD: nimda#A
      LANG: C.UTF-8
      TZ: Etc/UTC
    ports:
      - "2222:22/tcp"  
      - "8888:8888/tcp"  
    extra_hosts:
      - host.docker.internal:host-gateway
    volumes:
      - type: volume
        source: webos
        target: /home/admin
        volume:
          nocopy: true
    networks:
      - webos
    deploy:
      resources:
        limits:
          memory: 28g
        reservations:
          devices:
            - driver: nvidia
              count: all
              capabilities: [gpu]
